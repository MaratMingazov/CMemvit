<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="%category.name"
            id="Plugin2">
      </category>
      <view
            name="%view.name"
            icon="icons/sample.gif"
            category="Plugin2"
            class="ru.innopolis.lips.memvit.Stack"
            id="plugin2.views.Stack">
      </view>
      <view
            category="Plugin2"
            class="ru.innopolis.lips.memvit.Heap"
            icon="icons/sample.gif"
            id="plugin2.views.Heap"
            name="%view.name.0">
      </view>
      <view
            category="Plugin2"
            class="ru.innopolis.lips.memvit.ProgramInfo"
            icon="icons/sample.gif"
            id="plugin2.views.ProgramInfo"
            name="%view.name.1">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="plugin2.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         id="plugin2.views.CDebugger"
         point="org.eclipse.cdt.debug.core.CDebugger">
      <debugger
            class="ru.innopolis.lips.memvit.GDBCDIDebuggerMemvit"
            cpu="*"
            id="plugin2.views.CDIDebugger"
            modes="run,core,attach"
            name="CDebugger"
            platform="*">
      </debugger>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="ru.innopolis.lips.memvit.ConfigurationDelegate"
            id="Plugin_MemoryVizualization.launchConfigurationType"
            modes="debug"
            name="Lips C++ configuration tab"
            public="true"
            sourceLocatorId="org.eclipse.cdt.debug.core.sourceLocator"
            sourcePathComputerId="org.eclipse.cdt.debug.core.sourcePathComputer">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="ru.innopolis.lips.memvit.MemvitConfigurationTabGroup"
            id="Plugin_MemoryVizualization.LipsTypeGroup"
            type="Plugin_MemoryVizualization.launchConfigurationType">
      </launchConfigurationTabGroup>
   </extension>

</plugin>
